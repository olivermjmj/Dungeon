<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>

<StackPane fx:id="root" xmlns="http://javafx.com/javafx/17.0.12"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.nation.dungeon.controllers.CityMenu_Controller">
    <ImageView fx:id="background">
        <Image url="@../images/images/background/cityMenu.png"/>
    </ImageView>

    <VBox spacing="20.0">
        <Button fx:id="smithy" prefWidth="100.0" prefHeight="100.0"
                style="-fx-opacity: 0;
                   -fx-cursor: hand;" />
        <Button fx:id="arena" prefWidth="100.0" prefHeight="100.0"
                style="-fx-opacity: 0;
                   -fx-cursor: hand;" />
        <Button fx:id="upgrade" prefWidth="100.0" prefHeight="100.0"
                style="-fx-opacity: 0;
                   -fx-cursor: hand;" />
    </VBox>
</StackPane>